<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.movieseats.Receipt"
    android:weightSum="1">

    <TextView
        android:id="@+id/receiptTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:fontFamily="sans-serif"
        android:gravity="bottom"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Your Ticket"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:background="@android:color/black"
        android:textSize="35sp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/seatno"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Seats : "
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:textSize="25sp"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Screen : Audi 1"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:textSize="25sp"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/cinema"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="PVR : Dynamix, Juhu"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:textSize="25sp"
        tools:ignore="TextSizeCheck" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:paddingTop="25dp"
        android:layout_gravity="center"
        android:src="@drawable/qrcode"/>

    <TextView
        android:id="@+id/disc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:paddingBottom="10dp"
        android:text="Scan this QR Code at Entry"
        android:textAlignment="center"
        android:textSize="15sp"
        tools:ignore="TextSizeCheck" />


    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Enjoy your Movie Expereince!!"
        android:layout_marginBottom="30dp"
        android:textAlignment="center"

        android:textSize="25sp"
        tools:ignore="TextSizeCheck" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <Button
            android:id="@+id/btnbookAnother"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.60"
            android:background="#f54266"
            android:text="Book Another Ticket"
            android:textColor="@color/white"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.60"
            android:background="#f54265"
            android:text="Log Out"
            android:textColor="@color/white"
            tools:ignore="TextContrastCheck" />

    </LinearLayout>

</LinearLayout>
